{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "logicAppName": {
            "value": "my-hybrid-logicapp"
        },
        "customLocationName": {
            "value": "logicapp-hybrid-location"
        },
        "connectedEnvironmentName": {
            "value": "<your-connected-environment-name>"
        },
        "storageAccountName": {
            "value": "<your-storage-account-name>"
        },
        "fileShareName": {
            "value": "logicapp-share"
        },
        "storageAccountKey": {
            "value": "<your-storage-account-key>"
        },
        "sqlConnectionString": {
            "value": "Server=tcp:<your-sql-server>.database.windows.net,1433;Initial Catalog=LogicAppDB;Persist Security Info=False;User ID=sqladmin;Password=<your-sql-password>;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
        },
        "location": {
            "value": "eastus"
        },
        "minReplicas": {
            "value": 1
        },
        "maxReplicas": {
            "value": 3
        },
        "cpu": {
            "value": "0.5"
        },
        "memory": {
            "value": "1Gi"
        }
    }
}
